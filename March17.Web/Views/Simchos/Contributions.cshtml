@model ContributorsViewModel
<div>
    <div>
        <h2>Contributions for @Model.SimchaName</h2>
    </div>
    <form method="POST" action="/simchos/updatecontributions">
        <div class="table-responsive">
            <input type="hidden" name="simchaId" value="@Model.SimchaId" />
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Contribute</th>
                        <th>Name</th>
                        <th>Balance</th>
                        <th>AlwaysInclude</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @{ int i = 0;}
                    @foreach (var c in Model.Contributors)
                    {
                        <input type="hidden" name="transactions[@i].ContributorId" value="@c.Id" />
                        <tr>
                            <td>
                                <input id="checkbox" type="checkbox" checked=@c.Contributed name="transactions[@i].Contributed" value="true" data-toggle="toggle" data-on="Yes" data-off="No">

                            </td>

                            <td>@c.LastName @c.FirstName</td>

                            <td>@c.Balance.ToString("C")</td>

                            <td>
                                @if (c.AlwaysInclude)
                                {
                                    <div style="text-align: center;">
                                        <span style="font-size:25px" class="oi oi-circle-check"></span>
                                    </div>
                                }
                            </td>

                            <td>

                                <div class="input-group mb-3">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text">$</span>
                                    </div>
                                    <input id="amount" class="form-control" type="text" name="transactions[@i].amount" value="@c.AmountContributed" />
                                </div>
                            </td>
                        </tr>
                        i++;
                    }

                </tbody>
            </table>
        </div>
        <div style="text-align:center;">
            <button class="btn-lg btn-danger">Update</button>
        </div>

    </form>

</div>




